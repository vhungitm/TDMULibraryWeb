@using Web.Global
@{ 
    var user = (User)Session[Constants.ADMIN];
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Thư viện TDMU">
    <meta name="author" content="Hùng ITM">

    <!-- Icon Title -->
    <link rel="icon" href="/Images/tdmu-logo.png" type="image/x-icon">
    <title>Quản Trị - @ViewBag.Title</title>

    <!-- CSS -->
    <link href="~/Css/bootstrap.css" rel="stylesheet" />
    <link href="~/Css/style.css" rel="stylesheet" />
    <link href="~/Fontawesome/css/all.min.css" rel="stylesheet" />

    <!-- Scripts -->
    <script src="/Scripts/jquery.min.js"></script>
</head>

<body>
    <div id="up"></div>
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        @RenderPage("_SideBar.cshtml")
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ms-auto">

                        <li class="topbar-divider d-none d-sm-block"></li>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="me-2 d-none d-lg-inline text-gray-600 small">@(user.FullName)</span>
                                <img class="img-profile rounded-circle" src="@(user.Avatar)" width="50" height="50">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-end me-1 shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>
                                    Hồ sơ
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cog fa-sm fa-fw me-2 text-gray-400"></i>
                                    Cài đặt
                                </a>
                                <div class="dropdown-divider"></div>
                                <a id="btnLogout" class="dropdown-item" href="#">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>
                                    Đăng xuất
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Design by Hung ITM</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->
    </div>

    <!-- Script -->
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/mustache.min.js"></script>
    <script src="~/Scripts/pagination.min.js"></script>
    <script src="~/CKEditor/ckeditor.js"></script>
    <script src="~/CKFinder/ckfinder.js"></script>
    <script src="~/Scripts/selectpicker.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/Admin/user.js"></script>
</body>
</html>