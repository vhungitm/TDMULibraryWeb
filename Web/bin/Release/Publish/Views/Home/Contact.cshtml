@{
    ViewBag.Tilte = "TDMU - Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/Scripts/Client/feedback.js"></script>
}

<div class="row">
    <div class="col-5">
        <div class="mb-5">
            <h5 class="text-center mb-4">THÔNG TIN LIÊN HỆ</h5>
            <div class="mb-3">
                <span class="icon">
                    <i class="fas fa-home"></i>
                </span>
                <span class="text">06 Trần Văn Ơn, Phú Hòa, Thủ Dầu Một, Bình Dương</span>
            </div>
            <div class="mb-3">
                <span class="icon">
                    <i class="fas fa-envelope"></i>
                </span>
                <span class="text">thongtindientu@tdmu.edu.vn</span>
            </div>
            <div class="mb-3">
                <span class="icon">
                    <i class="fas fa-phone"></i>
                </span>
                <span class="text"> (0274)-3-822518 bấm 3 bấm 121</span>
            </div>
            <div class="mb-3">
                <span class="icon">
                    <i class="fas fa-globe-asia"></i>
                </span>
                <a href="/" class="text">https://vhthuvien.somee.com</a>
            </div>
        </div>

        <div>
            <h5 class="text-center mb-4">THỜI GIAN LÀM VIỆC</h5>
            <div class="mb-3">
                <span class="icon">
                    <i class="fas fa-clock"></i>
                </span>
                <span class="fw-bold">Thứ 2 - thứ 6: </span>
                <span class="text">7:00 AM - 5:00 PM</span>
            </div>
            <div class="mb-3">
                <span class="icon">
                    <i class="fas fa-ban"></i>
                </span>
                <span class="fw-bold">Thứ 7 - chủ nhật: </span>
                <span class="text">nghỉ</span>
            </div>
        </div>
    </div>

    <div class="col-7">
        <h5 class="text-center mb-4">NỘI DUNG LIÊN HỆ</h5>
        <form id="frmFeedback">
            <div class="form-group">
                <label class="form-label">Họ tên <span class="text-danger">(*)</span></label>
                <input id="txtName" name="txtName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Số điện thoại <span class="text-danger">(*)</span></label>
                <input id="txtPhone" name="txtPhone" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Email <span class="text-danger">(*)</span></label>
                <input id="txtEmail" name="txtEmail" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Nội dung <span class="text-danger">(*)</span></label>
                <textarea id="txtContent" name="txtContent" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Gửi nội dung</span>
                </button>
            </div>
        </form>
    </div>
</div>